@using ElderScrollsOnlineCraftingOrders.Models
@model ItemsPO
@{
                /**/

                ViewBag.Title = "Update Item";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Item</h2>

@using (Html.BeginForm("UpdateItem", "Items", FormMethod.Post))
{

    @Html.LabelFor(model => Model.Type)
    <div>
        @Html.DropDownListFor(model => Model.Type, new List<SelectListItem>()
        { new SelectListItem {Text = "Heavy Armor", Value = "Heavy Armor" },
        new SelectListItem {Text = "Medium Armor", Value = "Medium Armor" },
        new SelectListItem {Text = "Light Armor", Value = "Light Armor" },
        new SelectListItem {Text = "Shield", Value = "Shield" },
        new SelectListItem {Text = "Weapon", Value = "Weapon" },
        new SelectListItem {Text = "Jewelry", Value = "Jewelry"} }, "Item Type")
    </div>
    @Html.LabelFor(model => Model.SubType)
    <div>
        @if (Model.Type == "Heavy Armor" || Model.Type == "Medium Armor" || Model.Type == "Light Armor")
        {
            @Html.DropDownListFor(model => Model.SubType, new List<SelectListItem>()
       { new SelectListItem {Text = "Head", Value = "Head" },
       new SelectListItem {Text = "Shoulders", Value = "Shoulders" },
       new SelectListItem {Text = "Chest", Value = "Chest" },
       new SelectListItem {Text = "Hands", Value = "Hands" },
       new SelectListItem {Text = "Waist", Value = "Waist" },
       new SelectListItem {Text = "Legs", Value = "Legs" },
       new SelectListItem {Text = "Feet", Value = "Feet" } }, "SubType")
        }
        @if (Model.Type == "Shield")
        {
            @Html.DropDownListFor(model => Model.SubType, new List<SelectListItem>()
                { new SelectListItem {Text = "Shield", Value = "Shield" }}, "SubType")
        }
        @if (Model.Type == "Weapon")
        {
            @Html.DropDownListFor(model => Model.SubType, new List<SelectListItem>()
       { new SelectListItem {Text ="1h: Dagger", Value = "1h: Dagger" },
       new SelectListItem {Text ="1h: Mace", Value = "1h: Mace" },
       new SelectListItem {Text ="1h: Sword", Value = "1h: Sword" },
       new SelectListItem {Text ="1h: War Axes", Value = "1h: War Axes" },
