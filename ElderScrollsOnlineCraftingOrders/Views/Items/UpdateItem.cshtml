       new SelectListItem {Text ="Ice Staff", Value = "Ice Staff" },
       new SelectListItem {Text ="Lightning Staff", Value = "Lightning Staff" },
       new SelectListItem {Text ="Restoration Staff", Value = "Restoration Staff" }}, "SubType")
        }
        @if (Model.Type == "Jewelry")
        {
            @Html.DropDownListFor(model => Model.SubType, new List<SelectListItem>()
       { new SelectListItem {Text = "Necklace", Value = "Necklace" },
       new SelectListItem {Text = "Ring", Value = "Ring"}}, "SubType")
        }

    </div>
    @Html.LabelFor(model => Model.Trait)
