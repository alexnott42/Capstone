<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Black Market Wares", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (!(Session["RoleID"] is null) && (byte)Session["RoleID"] >= 5)
                    {
                        <li>@Html.ActionLink("Accounts", "AllUsers", "Users")</li>
                    }
                    @if (!(Session["RoleID"] is null) && (byte)Session["RoleID"] >= 4)
                    {
                        <li>@Html.ActionLink("All Orders", "ViewAllOrders", "Orders")</li>
                    }

                    @if (!(Session["RoleID"] is null) && (byte)Session["RoleID"] >= 3)
                    {
                        <li>@Html.ActionLink("My Orders", "ViewOrderByUserID", "Orders", new { UserID = Session["UserID"] }, null)</li>
                    }
                    @if (!(Session["RoleID"] is null) && (byte)Session["RoleID"] >= 4)
                    {
                        <li>@Html.ActionLink("Taken Orders", "ViewOrderByCrafterID", "Orders", new { CrafterID = Session["UserID"] }, new { @class = "btn" })</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!(Session["Username"] is null))
                    {
                        <li>
                            @Html.ActionLink(Session["Username"].ToString(), "Users", "Users", new { UserID = Session["UserID"] }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Users")
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "Users")
                        </li>
                        <li>
                            @Html.ActionLink("Register", "CreateNewAccount", "Users")
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Black Market Wares Guild</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
